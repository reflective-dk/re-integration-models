{
  "name": "re-type-bootstrap",
  "version": "0.0.1",
  "description": "Bootstrap definitions for the type and rule system on the Reflective Platform",
  "main": "index.js",
  "scripts": {
    "deploy:home": "npm run deploy -- home",
    "deploy:test": "npm run deploy -- test",
    "predeploy": "npm run build; re tenant -t dry-run",
    "deploy": "re context -d base -c bootstrap -e bootstrap; re tenant -t",
    "postdeploy": "re drop -c bootstrap -e bootstrap; re add -j build/objects.json > deployment-result.json",
    "verify": "mocha test-deployed/deployment-test.js",
    "prebuild": "npm run clean; mkdir ./build",
    "build": "./scripts/build-objects.js",
    "clean": "rm -Rf ./build; rm -f deployment-result.json",
    "test": "mocha --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/reflective-dk/re-type-bootstrap.git"
  },
  "keywords": [
    "reflective",
    "type",
    "system",
    "bootstrap"
  ],
  "author": "Reflective Code <code@reflective.dk>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "require-yml": "^1.3.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "chai-uuid": "^1.0.6",
    "mocha": "^4.0.1",
    "re-core-cli": "git+ssh://git@github.com:reflective-dk/re-core-cli.git",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "uuid": "^3.1.0"
  }
}
