{
  "name": "re-type-bootstrap",
  "version": "0.0.1",
  "description": "Bootstrap definitions for the type and rule system on the Reflective Platform",
  "main": "index.js",
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "echo 'deploy'",
    "prebuild": "npm run clean; mkdir ./build",
    "build": "npm run convert; npm run move",
    "convert": "find ./definitions/*.yaml -type f -exec yaml2json {} --pretty --save \\;",
    "move": "mv ./definitions/*.json ./build",
    "clean": "rm -Rf ./build; rm -f ./definitions/*.json",
    "test": "mocha --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/reflective-dk/re-type-bootstrap.git"
  },
  "keywords": [
    "reflective",
    "type",
    "system",
    "bootstrap"
  ],
  "author": "Reflective Code <code@reflective.dk>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "require-yml": "^1.3.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "re-core-cli": "git+ssh://git@github.com:reflective-dk/re-core-cli.git",
    "uuid": "^3.1.0",
    "yamljs": "^0.3.0"
  }
}
